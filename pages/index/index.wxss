/**index.wxss**/
.header{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width:100%;
  height:120rpx;
  background: #fff;
  border-bottom:2rpx solid #eee;
}
.header .callService{display:flex;align-items: center}
.header .callService .headerImg-1{width:68rpx;height:68rpx;margin-left:30rpx;}
.header .callService .headerImg-2{width:30rpx;height:34rpx;margin-left:50rpx;}
.header .callService .headerText-1{margin-left:10rpx;}

.header .otherBtns .headerImg-3{width:50rpx;height:42rpx;margin-right:60rpx;}
.header .otherBtns .headerImg-4{width:50rpx;height:42rpx;margin-right:60rpx;}
.header .otherBtns .headerImg-5{width:50rpx;height:42rpx;margin-right:30rpx;}
/*内容区域  */
.content{
  display: flex;  
  flex:1;
  width:100%;
  height:1rpx;
}
.content .catesList{width:160rpx;height:100%;}
.content .catesList .catesName{width:160rpx;height:120rpx;line-height:120rpx;text-align: center;color:#6A6A6A;background:#F9F9F9;border-left:10rpx solid #f9f9f9;}
.content .catesList .catesNameActive{background:#fff;border-left:10rpx solid #31C4C3;}

.content .goodsList .goodsName{width:100%;height:60rpx;line-height:60rpx;font-siez:26rpx;color: #6A6A6A;background:#F0F0F0;}
.content .goodsList .goodsName text{margin-left:28rpx;font-siez:26rpx;color: #6A6A6A;}
.content .goodsList .goodsInner{position:relative;display: flex;align-items: center;width:100%;height:200rpx;border-bottom:2rpx solid #eee;}
.content .goodsList .goodsInner .goodsImg{width:130rpx;height:130rpx;margin-left:28rpx;}
.content .goodsList .goodsInner .goodsInfo{display:flex;flex-direction: column;justify-content: space-between;width:100%;height:130rpx;margin-left:26rpx;}
.content .goodsList .goodsInner .goodsInfo .text1{font-size:32rpx;color: #282828;}
.content .goodsList .goodsInner .goodsInfo .text2{font-size:32rpx;color: #282828;}
.content .goodsList .goodsInner .goodsInfo .text3{font-size:22rpx;color: #FF0001;}
.content .goodsList .goodsInner .addBtn{position:absolute;right:20rpx;top:127rpx;width:48rpx;height:42rpx;}  
.content .goodsList .goodsInner .deBtn{position:absolute;right:142rpx;top:127rpx;width:48rpx;height:42rpx;}
.content .goodsList .goodsInner .num{position:absolute;right:95rpx;top:127rpx;}
.content .goodsList .goodsInner .hidden{display:none}
.content .list{width:100%;height:200rpx;background:red;}

/*购物车区域  */
.footer{
  position:relative;
  display:flex;
  align-items: center;
  width:100%;
  height:100rpx;
  background:#fff;
}
 .footer .footerImg-1{position:absolute;left:21rpx;top:-10rpx;width:96rpx;height:96rpx;} 
.footer .footerText-1{position:absolute;left:127rpx;top:0rpx;}
.footer .submitBtn{position:absolute;right:0%;top:0rpx;display:flex;align-items:center;justify-content: center;width:188rpx;height:100%;background: #31C4C3;font-size:36rpx;color:#fff;}